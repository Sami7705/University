@model UniversityModel.Models.Instructor

@{
    ViewData["Title"] = "Delete Instructor";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Are you sure you want to delete this instructor?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Last Name</dt>
            <dd class="col-sm-10">@Model.LastName</dd>

            <dt class="col-sm-2">Hire Date</dt>
            <dd class="col-sm-10">@Model.HireDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Password</dt>
            <dd class="col-sm-10">@Model.Password</dd>

            <dt class="col-sm-2">Office Location</dt>
            <dd class="col-sm-10">@Model.OfficeAssignment.Location</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
