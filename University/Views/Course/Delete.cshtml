@model UniversityModel.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Are you sure you want to delete this course?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">Credits</dt>
            <dd class="col-sm-10">@Model.Credits</dd>

            <dt class="col-sm-2">Department</dt>
            <dd class="col-sm-10">@Model.Department.Name</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
