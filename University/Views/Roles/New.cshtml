@model University.ViewModels.RoleViewModel
@{
    ViewData["Title"] = "New Role";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-user-shield"></i> إضافة دور جديد</h3>
                </div>
                <div class="card-body">
                    <form asp-action="New" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <!-- حقل اسم الدور -->
                        <div class="mb-3">
                            <label asp-for="RoleName" class="form-label fw-bold"><i class="fas fa-user-tag"></i> اسم الدور</label>
                            <input asp-for="RoleName" class="form-control" placeholder="أدخل اسم الدور" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <!-- أزرار التحكم -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-plus-circle"></i> إنشاء
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> العودة
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
