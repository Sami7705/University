@model UniversityModel.Models.Enrollment

@{
    ViewData["Title"] = "Create Enrollment";
}

<h1 class="text-center mt-4 text-primary">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-gradient text-white text-center">
                <h4 class="mb-0">Enrollment Details</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="CourseID" class="form-label fw-bold text-secondary"></label>
                        <select asp-for="CourseID" class="form-select border-primary" asp-items="ViewBag.Courses"></select>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="StudentID" class="form-label fw-bold text-secondary"></label>
                        <select asp-for="StudentID" class="form-select border-primary" asp-items="ViewBag.Students"></select>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Grade" class="form-label fw-bold text-secondary"></label>
                        <input asp-for="Grade" class="form-control border-primary" />
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                        <a asp-action="Index" class="btn btn-danger px-4">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        color: #fff;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9);
    }

    .card-header {
        background: linear-gradient(to right, #6a11cb, #2575fc);
    }

    .form-label {
        color: #333;
    }

    .form-control, .form-select {
        border: 2px solid #6a11cb;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-success:hover, .btn-danger:hover {
            opacity: 0.8;
        }
</style>

