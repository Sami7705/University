@model UniversityModel.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Department Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Budget</dt>
            <dd class="col-sm-10">@Model.Budget</dd>

            <dt class="col-sm-2">Start Date</dt>
            <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-2">Administrator</dt>
            <dd class="col-sm-10">@Model.Administrator.Name</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
