@model UniversityModel.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #f0f8ff; /* AliceBlue */
    }
    h1, h3, h2 {
        color: #ff4500; /* OrangeRed */
        text-align: center;
        font-family: 'Arial', sans-serif;
    }
    .border {
        border: 2px solid #4caf50; /* Green */
        border-radius: 10px;
        background-color: #ffffff; /* White */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .form-control {
        border: 1px solid #4caf50; /* Green */
        border-radius: 5px;
    }
    .btn-success {
        background-color: #ff4500; /* OrangeRed */
        border-color: #ff4500;
    }
    .btn-secondary {
        background-color: #4caf50; /* Green */
        border-color: #4caf50;
    }
    .btn-success:hover, .btn-secondary:hover {
        opacity: 0.8;
    }
    label {
        font-weight: bold;
        color: #4caf50; /* Green */
    }
    .text-danger {
        color: #ff4500; /* OrangeRed */
    }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<form method="post" asp-action="DeleteStudent">
    <div class="border p-3 mt-4">
        <input asp-for="Id" hidden />
        <div class="row pb-2">
            <h2 class="text-primary">Edit Student</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="EnrollmentDate"></label>
            <input asp-for="EnrollmentDate" class="form-control" disabled />
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-success">Delete</button>
            <a asp-controller="Student" asp-action="Index" class="btn btn-secondary">Back To Student</a>
        </div>
    </div>
</form>
