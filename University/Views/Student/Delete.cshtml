@model UniversityModel.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<form method="post" asp-action="DeleteStudent">
    <div class="border p-3 mt-4">
        <input asp-for="Id" hidden />
        <div class="row pb-2">
            <h2 class="text-primary">Edit Student</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />

        </div>
        <div class="mb-3">
            <label asp-for="EnrollmentDate"></label>
            <input asp-for="EnrollmentDate" class="form-control" disabled />

       
        <div class="col-6">

            <button type="submit" class="btn btn-success">Delete</button>
            <a asp-controller="Student" asp-action="Index" class="btn btn-secondary">Back To Student</a>
        </div>

    </div>
</form>
