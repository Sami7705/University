@model UniversityModel.Models.CourseAssignment

@{
    ViewData["Title"] = "Delete Course Assignment";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Are you sure you want to delete this course assignment?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Course</dt>
            <dd class="col-sm-10">@Model.Course.Title</dd>

            <dt class="col-sm-2">Instructor</dt>
            <dd class="col-sm-10">@Model.Instructor.Name</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="CourseID" />
            <input type="hidden" asp-for="InstructorID" />
            <div class="form-group text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
