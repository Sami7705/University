@model University.ViewModels.RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Register</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="font-weight-bold"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="font-weight-bold"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="font-weight-bold"></label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="font-weight-bold"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div><br/>
                    <div class="form-group">
                        <input type="submit" value="Register" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        color: #fff;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9);
    }

    .btn-primary {
        background-color: #ff7e5f;
        border-color: #ff7e5f;
    }

    .btn-primary:hover {
        background-color: #feb47b;
        border-color: #feb47b;
    }

    .form-control {
        border-radius: 0.25rem;
    }

    .form-group label {
        color: #333;
    }
</style>