@model University.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center">Login</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="font-weight-bold"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="font-weight-bold"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                        <span asp-validation-for="RememberMe" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary btn-block" />
                    </div>
                    <div class="form-group text-center">
                        <a asp-action="Register" class="btn btn-secondary">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        color: #fff;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9);
    }

    .btn-primary {
        background-color: #6a11cb;
        border-color: #6a11cb;
    }

    .btn-primary:hover {
        background-color: #2575fc;
        border-color: #2575fc;
    }

    .btn-secondary {
        background-color: #fff;
        color: #6a11cb;
        border-color: #6a11cb;
    }

    .btn-secondary:hover {
        background-color: #2575fc;
        color: #fff;
        border-color: #2575fc;
    }
</style>