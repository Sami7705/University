@model IEnumerable<UniversityModel.Models.Enrollment>
@using UniversityModel.Models

<form asp-action="CreateList" asp-controller="Enrollment" method="post">
    <table class="table table-striped table-hover mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Student Name</th>
                <th>Email</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                var enrollment = Model.ElementAt(i);
                <tr>
                    <td>@enrollment.Student.Name</td>
                    <td>@enrollment.Student.Email</td>
                    <td>
                        <input type="hidden" name="Enrollments[@i].StudentID" value="@enrollment.StudentID" />
                        <input type="hidden" name="Enrollments[@i].CourseID" value="@enrollment.CourseID" />
                        <select class="form-control" name="Enrollments[@i].Grade">
                            <option value="" selected="@(enrollment.Grade == null)">No Grade</option>
                            <option value="A" selected="@(enrollment.Grade == Grade.A)">A</option>
                            <option value="B" selected="@(enrollment.Grade == Grade.B)">B</option>
                            <option value="C" selected="@(enrollment.Grade == Grade.C)">C</option>
                            <option value="D" selected="@(enrollment.Grade == Grade.D)">D</option>
                            <option value="E" selected="@(enrollment.Grade == Grade.E)">E</option>
                            <option value="F" selected="@(enrollment.Grade == Grade.F)">F</option>
                        </select>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Submit Grades</button>
</form>
