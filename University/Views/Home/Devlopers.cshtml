@page "/developers"
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container text-center mt-5">
    <h2 class="mb-4">تعرف على مطوري النظام</h2>
    <div class="row justify-content-center">
        <!-- سامي الدبعي -->
        <div class="col-md-5 m-3 card shadow-lg p-4 border-0 rounded">
            <img src="~/images/samii.jpg" class="img-fluid rounded-circle border border-primary p-2" alt="صورة سامي الدبعي" width="200">
            <h4 class="mt-3">سامي الدبعي</h4>
            <p class="text-muted">مختص بالباك اند في ASP.NET Core</p>
        </div>
        <!-- رشاد الدبعي -->
        <div class="col-md-5 m-3 card shadow-lg p-4 border-0 rounded">
            <img src="~/images/rashad.jpg" class="img-fluid rounded-circle border border-success p-2" alt="صورة رشاد الدبعي" width="200">
            <h4 class="mt-3">رشاد الدبعي</h4>
            <p class="text-muted">مختص بالفرونت اند</p>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
    }
    .card {
        transition: transform 0.3s;
    }
    .card:hover {
        transform: scale(1.05);
    }
</style>
