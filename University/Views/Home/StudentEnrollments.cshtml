@model IEnumerable<UniversityModel.Models.Enrollment>
@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Student Enrollments";
}

<h1 class="text-center">Student Enrollments</h1>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Course Title</th>
                                <th>Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model)
                            {
                                <tr>
                                    <td>@enrollment.Course?.Title</td>
                                    <td>@enrollment.Grade?.ToString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        color: #fff;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9);
    }

    .table {
        margin-top: 20px;
    }

        .table th, .table td {
            color: #333;
        }
</style>
